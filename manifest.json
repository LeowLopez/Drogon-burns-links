{
	"name": "Drogon burns links",
	"version": "1.0",
	"description": "Adiciona cor diferente aos links já visitados",
	"browser_action":{
		"default_popup": "index.html",
		"default_icon": "icon.png"
	},

	"icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },
	
	"content_scripts": [
    	{
        	"matches": ["http://*/*", "https://*/*"],
        	"css": ["style.css"],
        	"js": ["content.js"]
    	}
	],
	
	"permissions": ["tabs", "storage"],

	"manifest_version": 2
}